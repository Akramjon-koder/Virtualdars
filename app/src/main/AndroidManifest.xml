<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.texnoman.virtualdars">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/logo2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinBotNav"
        android:usesCleartextTraffic="true"
        >
        <activity
            android:name=".activity.VideoDownloadActivity"
            android:exported="false" />
        <activity android:name=".activity.FileDownloadActivity" />
        <activity android:name=".activity.BuyCourseActivity" />
        <activity android:name=".activity.SearchCoursesActivity" />
        <activity android:name=".activity.PlayVideoActivity" />
        <activity android:name=".activity.ResetVerificationActivity" />
        <activity android:name=".activity.PasswordResetActivity" />
        <activity android:name=".activity.ChangePasswordActivity" />
        <activity android:name=".activity.EditProfileActivity" />
        <activity android:name=".activity.CourseAboutActivity" />
        <activity android:name=".activity.SignUpVerificationActivity" />
        <activity android:name=".activity.CategoryCoursesActivity" />
        <activity
            android:name=".activity.FullWindowActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".activity.CourseActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.TopCoursesActivity" />
        <activity android:name=".activity.CoursesActivity" />
        <activity android:name=".activity.LessonActivity" />
        <activity android:name=".activity.SearchActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>